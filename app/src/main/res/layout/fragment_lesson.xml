<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".creating.lesson.LessonFragment">

    <TextView
        android:id="@+id/lesson_fragment_lesson_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/lesson_fragment_lesson_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lesson_fragment_lesson_name" />

    <Button
        android:id="@+id/lesson_fragment_add_task_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/create_task"
        app:layout_constraintTop_toBottomOf="@id/lesson_fragment_lesson_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.45"/>

    <Button
        android:id="@+id/lesson_fragment_edit_lesson_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/edit_lesson"
        app:layout_constraintTop_toBottomOf="@id/lesson_fragment_lesson_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"/>

    <ListView
        android:id="@+id/lesson_fragment_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lesson_fragment_add_task_button" />

</androidx.constraintlayout.widget.ConstraintLayout>