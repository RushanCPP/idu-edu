<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".creating.task.creating.CountTaskCreatingFragment">

    <EditText
        android:id="@+id/count_task_creating_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/task_text"
        android:inputType="text"
        android:textColorHint="#757575"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/count_task_creating_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/task_score"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#757575"
        tools:ignore="Autofill"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@id/count_task_creating_text" />
    <EditText
        android:hint="@string/answer"
        tools:ignore="Autofill"
        android:textColorHint="#757575"
        android:minHeight="48dp"
        android:inputType="text"
        android:id="@+id/count_task_creating_answer"
        app:layout_constraintTop_toBottomOf="@id/count_task_creating_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/count_task_creating_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_task"
        app:layout_constraintTop_toBottomOf="@id/count_task_creating_answer"/>

</androidx.constraintlayout.widget.ConstraintLayout>